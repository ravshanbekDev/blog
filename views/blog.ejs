<!-- blogs.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Blogs</title>
</head>
<body>
  <h1>All Blogs</h1>
  <% blogs.forEach((blog) => { %>
    <div>
      <h2><%= blog.title %></h2>
      <p><%= blog.description %></p>
      <img src="<%= blog.image %>" alt="Blog Image">
      <p>Likes: <%= blog.likes %></p>
      <p>Views: <%= blog.views %></p>
      <a href="/blogs/<%= blog.id %>">View Blog</a>
      <hr>
    </div>
  <% }); %>
</body>
</html>
